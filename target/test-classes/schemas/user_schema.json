{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Schema",
  "type": "object",
  "properties": {
    "id": { "type": ["integer", "number"] },
    "name": { "type": "string" },
    "username": { "type": "string" },
    "email": { "type": "string" },
    "address": {
      "type": "object",
      "properties": {
        "street": { "type": "string" },
        "suite": { "type": "string" },
        "city": { "type": "string" },
        "zipcode": { "type": "string" }
      },
      "required": ["street", "city"]
    }
  },
  "required": ["id", "name"]
}
